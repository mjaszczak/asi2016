
<h1>Laptops</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Model</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @laptops.each do |laptop| %>
      <tr>
        <td><%= laptop.brand %></td>
        <td><%= laptop.model %></td>
        <td><%= link_to 'Show', laptop %></td>
        <%- if user_signed_in? %>
        <td><%= link_to 'Edit', edit_laptop_path(laptop) %></td>
        <td><%= link_to 'Delete', laptop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%- if user_signed_in? %>
 <button type="button" class="btn btn-default">
   <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
   <%= link_to 'New Laptop', new_laptop_path %>
   </button>
<% end %>